<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="50dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:visibility="gone"
            android:id="@+id/pin_list_container"
            app:layout_constraintEnd_toStartOf="@+id/pin_setter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0">
        <View
                android:layout_gravity="bottom"
                android:layout_height="30dp"
                android:layout_width="match_parent"
                android:background="@drawable/stroke_rounded_rectangle"
                android:backgroundTint="#F6F6F6"/>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:id="@+id/pin_color_recycler_view">
        </androidx.recyclerview.widget.RecyclerView>
    </FrameLayout>




    <ImageView
            android:id="@+id/pin_setter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="visible"
            android:background="@mipmap/gwanan_pin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>