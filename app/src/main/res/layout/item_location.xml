<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:backgroundTint="#D9CDC1"
        android:background="@drawable/round_top_layout"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/npc_image"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:src="@mipmap/buggi" />
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:orientation="vertical">
        <TextView
                android:id="@+id/npc_location_text"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="bottom"
                android:text="부산" />

        <TextView
                android:id="@+id/npc_location_progress_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#99323232"
                android:text="40%" />

    </LinearLayout>

</LinearLayout>