<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

    <TextView
            android:id="@+id/quest_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 하루도 힘차게!"
            android:textSize="14sp"
            android:textColor="#222222"
            android:layout_marginBottom="8dp" />

    <ProgressBar
            android:id="@+id/quest_progress_bar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="0"
            android:max="100"
            android:progressDrawable="@drawable/custom_progress_bar"
            android:layout_marginBottom="4dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/quest_current_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="#F47B20"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/quest_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km"
                    android:textSize="12sp"
                    android:textColor="#CCCCCC" />

        </LinearLayout>

        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/quest_target_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="12sp"
                    android:textColor="#CCCCCC" />

            <TextView
                    android:id="@+id/quest_target_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km"
                    android:textSize="12sp"
                    android:textColor="#CCCCCC" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>