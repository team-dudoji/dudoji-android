<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/outer_drop_zone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
            android:id="@+id/quest_modal_button"
            android:src="@mipmap/quest_button"
            android:visibility="visible"
            android:layout_width="50dp"
            android:layout_height="63dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:layout_gravity="top|start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="156dp"
            android:layout_marginStart="16dp" />

    <ImageButton
            android:id="@+id/btnFilter"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginTop="98dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:elevation="10dp"
            android:visibility="visible"
            android:contentDescription="필터 버튼"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
            android:id="@+id/btnItem"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginTop="165dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:elevation="10dp"
            android:visibility="visible"
            android:contentDescription="아이템 버튼"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
            android:id="@+id/item_modal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:layout_marginEnd="28dp"
            android:elevation="8dp"
            android:background="@drawable/rounded_modal_template"
            android:visibility="gone"
            android:backgroundTint="#F6F6F6"
            app:layout_constraintEnd_toStartOf="@+id/btnItem"
            app:layout_constraintTop_toTopOf="@+id/btnItem"
            app:layout_constraintBottom_toBottomOf="@+id/btnItem">

    </LinearLayout>

    <include
            android:id="@+id/pin_select_bar"
            layout="@layout/map_pin_select_bar"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:visibility="visible"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="250dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    <FrameLayout
            android:id="@+id/filterBarWrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/filterBarAnim"
                android:layout_width="221dp"
                android:layout_height="56dp"
                app:lottie_fileName="filter_bar_background.json"
                app:lottie_autoPlay="false"
                app:lottie_loop="false" />

        <ImageButton
                android:id="@+id/btnFilterStranger"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:contentDescription="모두"
                android:layout_gravity="top|start" />

        <ImageButton
                android:id="@+id/btnFilterFriend"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:contentDescription="친구"
                android:layout_gravity="top|start" />

        <ImageButton
                android:id="@+id/btnFilterMine"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:contentDescription="나"
                android:layout_gravity="top|start" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>