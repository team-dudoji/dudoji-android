<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.map.MapActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mapRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <com.dudoji.android.presentation.map.MapObjectTextureView
                    android:id="@+id/map_object_texture_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:focusable="false"/>
        </FrameLayout>

        <include
                android:id="@+id/search_bar_container"
                layout="@layout/search_bar_container"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/my_location_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="124dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/profileBarLottie"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginBottom="0dp"
                app:lottie_fileName="profile_bar.json"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:elevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_max="400dp" />

        <LinearLayout
                android:id="@+id/profileSelectorBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center" android:paddingVertical="16dp" android:paddingHorizontal="24dp" android:visibility="gone"
                android:elevation="12dp" app:layout_constraintBottom_toBottomOf="@id/profileBarLottie"
                app:layout_constraintTop_toTopOf="@id/profileBarLottie"
                app:layout_constraintStart_toStartOf="@id/profileBarLottie"
                app:layout_constraintEnd_toEndOf="@id/profileBarLottie"
                tools:visibility="visible"
                >

            <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileOption1"
                    style="@style/ProfileOptionImage"
                    android:src="@drawable/profile_image1" />

            <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileOption2"
                    style="@style/ProfileOptionImage"
                    android:src="@drawable/profile_image2" />

            <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileOption3"
                    style="@style/ProfileOptionImage"
                    android:src="@drawable/profile_image3" />

            <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileOption4"
                    style="@style/ProfileOptionImage"
                    android:src="@drawable/profile_image4" />
        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileButton"
                android:layout_width="120dp" android:layout_height="120dp" android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_image1"
                android:elevation="2dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp"/>

        <include
                android:id="@+id/navigation_layout"
                layout="@layout/map_navigation_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
            android:id="@+id/map_overlay_ui_layout"
            layout="@layout/map_overlay_ui_layout"/>

    <include
            android:id="@+id/landmark_bottom_sheet"
            layout="@layout/landmark_bottom_sheet" />

    <include
            android:id="@+id/dialog_layout"
            layout="@layout/dialog_layout"
            android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>