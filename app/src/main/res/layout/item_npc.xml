<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/item_location_layout"
        android:orientation="horizontal">
    <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:paddingVertical="10dp"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/npc_quest_text"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:padding="4dp"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="광안대교"
                    android:layout_marginStart="10dp" />

            <TextView
                    android:id="@+id/npc_progress_text"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:padding="4dp"
                    android:textSize="10sp"
                    android:textColor="#99323232"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="5/10"
                    android:layout_marginStart="10dp" />
        </LinearLayout>

        <ProgressBar
                android:layout_width="140dp"
                android:layout_height="5dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/npc_progress_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progress="10"
                android:max="100"
                android:progressDrawable="@drawable/custom_progress_bar"
                android:layout_marginBottom="4dp" />

    </LinearLayout>
    <Button
            android:id="@+id/npc_move_button"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:textSize="10sp"
            android:text="이동"
            android:padding="0dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:backgroundTint="#998675"
            android:layout_marginStart="10dp" />

</LinearLayout>